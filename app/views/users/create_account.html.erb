<div class="page-section flexbox vertical stretch">
  <div class="section-inner flexbox vertical stretch">

  <%# contains a form which allows the user to input information as part of the account creation process. #%>

    <div class="section-title">

    <h2>Create New Account</h2>

    </div>
    <%= form_with url: create_path, remote: true, method: 'post' do |form| %>
      <% flash.each do |type, msg| %>
        <div class='alert'>
          <%= msg%>
        </div>
      <% end %>
    <p>First name: <%= form.text_field :first_name, :placeholder => "Johnny", :required => true %></p> <br>
    <p>Last name: <%= form.text_field :last_name, :placeholder => "Appleseed", :required => true %></p> <br>
    <p>Email: <%= form.email_field :email, :placeholder => "jappleseed@apple.orchard", :required => true %></p> <br>
    <%= form.submit "Create account", class: "button" %>
  <% end %>

  </div>
</div