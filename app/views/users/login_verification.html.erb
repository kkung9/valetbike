<div class="page-section flexbox vertical stretch">
  <div class="section-inner flexbox vertical stretch">

  <%# provides a form for the user to verify the authentication code which was sent to their email as a part of login verification. #%>

    <div class="section-title">
    <h2>Verify Email Code</h2>
    </div>

    <%= form_with url: start_login_path, remote: true, method: 'post' do |form| %>
    <% flash.each do |type, msg| %>
        <div class='alert'>
            <%= msg %>
        </div>
    <% end %>
    <p>Type Code Here: <%= form.text_field :code, :placeholder => "0000" %></p> <br>
    <%= form.submit "Submit Code", :class => "button" %>
  <% end %>

  <%= button_to("Return to Login", user_login_path, :method => "get", :class => "button") %> 

  </div>
</div