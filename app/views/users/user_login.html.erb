<div class="page-section flexbox vertical stretch">
  <div class="section-inner flexbox vertical stretch">

  <%# displays user login page, allows user to input email and send authentication code. #%>

    <div class="section-title" style = "margin-left:0;">
      <h2>Login</h2>
    </div>

    <%= form_with url: create_session_path, remote: true, method: 'post' do |form| %>
    <% flash.each do |type, msg| %>
        <div class='alert'>
            <%= msg %>
        </div>
    <% end %>
    
    <div id = "input">Email: <%= form.email_field :email, :placeholder => "jappleseed@apple.orchard", id: "textbox" %></div>
      <br>
      <%= form.submit "Send Verification Code", :class => "button"%>
      <% end %>
      <%= button_to "Create Account", "/create_account", :method => "get", :class => "button altbutton" %>
    </div>

</div