<div class="page-section flexbox vertical stretch contentttt">
  <div class="section-inner flexbox vertical stretch">
    <div class="section-title">

    <%# view displays information about the selected station, accessed via the station controller #%>

      <h2><%= @station.name %></h2>

      <div>
        <p>Address: <%= @station.address %><p>
        <p><%= @station.bikes.count %> bikes docked</p>
        <% if logged_in? || !!session[:guest] %>
          <%= button_to("RENT NOW", rental_path(@station.identifier), :method => "get", :class => "button") %> 
        <% else %>
          <%= button_to("RENT NOW", guest_option_path, :method => "get", :class => "button") %>
          <% cookies[:current_station] = @station.identifier %>
        <% end %>
      </div>

      <div class="station-image" >
        <% if @station.photo %>
          <%= image_tag(@station.photo)%>
        <% end %>
      </div>

    </div>
  </div>
</div>