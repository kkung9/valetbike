<div class="record-row <%= cycle "odd", "even", name: "row-cycler" %> flexbox vertical stretch">
    <div class="card">
        <div class="container">

        <%# displays station information within station cards on search page #%>

            <div>
                <% if station.photo %>
                    <%= image_tag(station.photo)%>
                <% end %>
            </div>
            <h3><b><%= station.name %></b></h3>
            <p><%= station.address %></p> 
            <p><span style="color: var(--color2)"><%= station.bikes.count%></span> bikes currently docked.</p> 
            <div class="select-btn">
                <%= link_to 'Select', station_path(station.identifier), class: "button" %>
            </div>
        </div>
    </div>
</div>
